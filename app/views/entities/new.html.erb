<div class='form-container bg-white mt-1'>
<% if flash[:error]%>
    <span class="alert-danger"><%= flash[:error]%> </span>
<%end%>
<%= form_with model:@entity, url: entities_path, method: :post do |form|%>
<div>
    <%= form.text_field :name, placeholder:"Name",
    class: "form-control border-0 border-top fs-5" %>
</div>
<div>
    <%= form.number_field :amount, in: 1..300000, placeholder: "Amount",
    class: "form-control border-0 border-top fs-5"
    %>
</div>
<div>
    <%= form.collection_select :group,
    Group.order(:name), :id, :name, 
    {:include_blank => 'SELECT A GROUP'}, {:class=> "form-select border-0 border-top" }
    %>
</div>
<div class="m-3">
    <%= form.submit "Save", class: "btn btn-primary btn-lg form-control mb-3"%>
</div>
<% end %>
</div>
