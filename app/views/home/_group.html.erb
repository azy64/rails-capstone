<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Icon</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% groups.each do |group| %>
      <tr>
        <td><%=link_to group.name, group_path(id: group.id) %></td>
        <td><%= image_tag "/uploads/".concat(group.icon.to_s), class: "img-responsive", size: 60%></td>
        <td></td>
        <td></td>
        <td></td>
      </tr>
    <% end %>
  </tbody>
</table>

