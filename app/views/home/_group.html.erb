
    <% groups.each do |group| %>
      <div class="container">
        <div class="row bg-white m-2 p-2" style="box-shadow: 0 5px 14px gray">
          <div class="col-3">
            <%= image_tag "/uploads/".concat(group.icon.to_s), class: "img-responsive", size: 55%>
          </div>
          <div class="col-6 pt-3">
            <%=link_to group.name, group_path(id: group.id),
             class: "text-decoration-none fs-6 text-muted" %>
          </div>
          <div class="col-3 pt-3">
          <% sum = 0%>
          <%group.entities.each do |ent| %>
          <%sum = sum + ent.amount%>
          <%end%>
            <span class="fw-bold fs-6 mt-5">â‚¬<%=sum%></span>
          </div>
        </div>
      </div>
    <% end %>
